                <div class="auto-container">
                    <div class="content-box">
                        <h1>Register</h1>
                    </div>
                </div>
            </section>
            <!-- page-title end -->

            <form method="post" asp-action="RegisterStep2" asp-controller="Account" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" required>
                    <span asp-validation-for="FirstName" class="text-danger font-monospace"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" required>
                    <span asp-validation-for="LastName" class="text-danger font-monospace"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CivilID"></label>
                    <input asp-for="CivilID" required>
                    <span asp-validation-for="CivilID" class="text-danger font-monospace"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-control text-center font-monospace">
                        <option value="-1">-- Select --</option>trol">
                        <option value="0">Male</option>
                        <option value="1">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger font-monospace"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth"></label>
                    <input asp-for="DateOfBirth" class="form-control text-center font-monospace" required>
                    <span asp-validation-for="DateOfBirth" class="text-danger font-monospace"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicture" class="form-label"></label>
                    <input asp-for="ProfilePicture" class="form-control-file form-control" type="file" />
                    <span asp-validation-for="ProfilePicture" class="text-danger font-monospace"></span>
                </div>

                <div class="form-group message-btn">
                    <button type="submit" class="theme-btn btn-one">Register</button>
                </div>
                <ul class="social-links clearfix">
                    <li>
                        <a asp-action="Login" asp-controller="Account">Login</a>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</section>

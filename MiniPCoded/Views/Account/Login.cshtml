<!-- sign-section -->
<section class="sign-section pt_100 pb_120">
    <div class="pattern-layer" style="background-image: url(/assets/images/shape/shape-2.png);"></div>
    <div class="auto-container">
        <div class="form-inner">
            <!-- page-title -->
            <section class="page-title centred pb_80 pt_30">
                <div class="auto-container">
                    <div class="content-box">
                        <h1>Login</h1>
                    </div>
                </div>
            </section>
            <!-- page-title end -->

            <form method="post" asp-action="Login" asp-controller="Account">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" name="email" required>
                    <span asp-validation-for="Email" class="text-danger font-monospace"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" required>
                    <span asp-validation-for="Password" class="text-danger font-monospace"></span>
                </div>
                <div class="other-option">
                    <div class="check-box">
                        <input asp-for ="RememberMe" class="check" type="checkbox">
                        <label asp-for="RememberMe"></label>
                        <span asp-validation-for="RememberMe" class="text-danger font-monospace"></span>
                    </div>
                </div>
                <div class="form-group message-btn">
                    <button type="submit" class="theme-btn btn-one">Log In</button>
                </div>
                <ul class="social-links clearfix">
                    <li>
                        <a asp-action="RegisterStep1" asp-controller="Account">Create an Account</a>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</section>
<!-- sign-section end -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("registerForm");
            const inputs = form.querySelectorAll("input[type='text'], input[type='password']");
            const registerBtn = document.getElementById("registerBtn");

            function checkInputs() {
                let allFilled = true;

                inputs.forEach(input => {
                    if (input.value.trim() === "") {
                        allFilled = false;
                    }
                });

                registerBtn.disabled = !allFilled; // Enable button only if all fields are filled
            }

            // Listen for input changes on each field
            inputs.forEach(input => {
                input.addEventListener("input", checkInputs);
            });
        });
    </script>
}
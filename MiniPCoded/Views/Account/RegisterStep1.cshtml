<!-- signUp-section -->
<section class="sign-section pt_110 pb_120">
    <div class="pattern-layer" style="background-image: url(~/assets/images/shape/shape-2.png);"></div>
    <div class="auto-container">
        <div class="form-inner">
            <form asp-action="RegisterStep1" asp-controller="Account" method="post">

                <div class="content-box text-center">
                    <h1>Sign Up</h1>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group message-btn">
                    <button type="submit" class="theme-btn btn-one">Continue</button>
                </div>
                <ul class="social-links clearfix">
                    <li>
                        <a asp-action="Login" asp-controller="Account">Sign In</a>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</section>
<!-- signUp-section end -->


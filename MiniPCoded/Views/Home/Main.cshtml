    <!-- favicon -->
    <script>
        let frames = [
          "/assets/images/frame1.png",
          "/assets/images/frame2.png",
          "/assets/images/frame3.png"
        ]; // Use absolute paths

        let index = 0;

        function animateFavicon() {
            let link = document.getElementById("dynamic-favicon");
            if (!link) {
                link = document.createElement("link");
                link.id = "dynamic-favicon";
                link.rel = "icon";
                link.type = "image/png";
                document.head.appendChild(link);
            }

            link.href = frames[index] + "?v=" + new Date().getTime(); // Add timestamp to prevent caching

            index = (index + 1) % frames.length; // Loop
            setTimeout(animateFavicon, 1200); // Adjust speed (700ms per frame)
        }

        animateFavicon(); // Start animation loop
    </script>
    <!-- main-cards -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setInterval(() => {
                let img2 = document.querySelector('.image-2 img'); // Front image
                let img3 = document.querySelector('.image-3 img'); // Behind image

                // Apply fade-out effect only to the front image
                img2.style.opacity = "0";

                setTimeout(() => {
                    // Swap image sources
                    let tempSrc = img2.src;
                    img2.src = img3.src;
                    img3.src = tempSrc;

                    // Reset opacity for smooth fade-in of new front image
                    img2.style.opacity = "1";
                }, 500); // Wait for fade-out before swapping (0.5s)
            }, 3000); // Switch every 3 seconds
        });

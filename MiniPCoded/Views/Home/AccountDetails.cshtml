@model IndexViewModel

@{
    ViewBag.Title = "Account Details";
}

<h1 class="text-center mt-4">Account Details</h1>

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Email:</div>
        <div class="col-sm-8">@Model.Email</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Username:</div>
        <div class="col-sm-8">@Model.UserName</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">First Name:</div>
        <div class="col-sm-8">@Model.FirstName</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Last Name:</div>
        <div class="col-sm-8">@Model.LastName</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Date of Birth:</div>
        <div class="col-sm-8">@Model.DateOfBirth.ToString("MM/dd/yyyy")</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Gender:</div>
        <div class="col-sm-8">@Model.Gender</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Civil ID:</div>
        <div class="col-sm-8">@Model.CivilID</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Balance:</div>
        <div class="col-sm-8">@Model.Balance.ToString("C")</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Account Number:</div>
        <div class="col-sm-8">@Model.AccountNumber</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 font-weight-bold">Profile Picture:</div>
        <div class="col-sm-8">
            <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px;" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-12 text-center">
            <a asp-action="EditAccountDetails" asp-controller="Home" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>
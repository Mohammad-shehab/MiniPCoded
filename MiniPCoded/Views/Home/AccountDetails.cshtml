@model IndexViewModel

@{
    ViewBag.Title = "Account Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2>Account Details</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Email:</div>
                <div class="col-sm-8">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">First Name:</div>
                <div class="col-sm-8">@Model.FirstName</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Last Name:</div>
                <div class="col-sm-8">@Model.LastName</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Date of Birth:</div>
                <div class="col-sm-8">@Model.DateOfBirth.ToString("MM/dd/yyyy")</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Gender:</div>
                <div class="col-sm-8">@Model.Gender</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Civil ID:</div>
                <div class="col-sm-8">@Model.CivilID</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Balance:</div>
                <div class="col-sm-8 text-success">@Model.Balance.ToString("C")</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Account Number:</div>
                <div class="col-sm-8">@Model.AccountNumber</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Profile Picture:</div>
                <div class="col-sm-8">
                    <img src="~/Images/@Model.ProfilePicturePath" alt="Profile Picture" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px;" />
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-action="EditAccountDetails" asp-controller="Home" class="btn btn-outline-primary">Edit</a>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@using Microsoft.AspNetCore.Identity
@using CPCoded.Models
@inject UserManager<ApplicationUser> userManager;
@model IEnumerable<LoanApplication>
@{
    ViewData["Title"] = "Pending";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="ll">
    <h2>Pending Loans</h2>
    @if (!Model.Any())
    {
        <br>
        <a asp-action="ApplyLoan" asp-controller="Loan" class="btn btn-outline-primary">Apply for Loan</a>
        <a asp-action="Index" asp-controller="Loan" class="btn btn-outline-primary">Approved Applications</a>
        <a asp-action="RejectedApp" asp-controller="Loan" class="btn btn-outline-primary">Rejected Applications</a>
        <br />
        <!-- If the model is empty, show a message -->
        <div class="alert alert-warning">
            <h4 class="alert-heading">Table is Empty</h4>
            <p>No loans found in the database.</p>
            <p>Make a loan by making one above!</p>
        </div>

    }
    else
    {
        <a asp-action="ApplyLoan" asp-controller="Loan" class="btn btn-outline-primary">Apply for Loan</a>
        <a asp-action="Index" asp-controller="Loan" class="btn btn-outline-primary">Approved Applications</a>
        <a asp-action="RejectedApp" asp-controller="Loan" class="btn btn-outline-primary">Rejected Applications</a>
        <br />
        <table class="table table-responsive loan-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Amount</th>
                    <th>Duration (Months)</th>
                    <th>Loan Type</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr class="@(loan.Status == LoanApplication.LoanStatus.PaidOff ? "table-success" : "")">
                        <td>@loan.Id</td>
                        <td>@loan.LoanAmount</td>
                        <td>@((int)loan.DurationInMonths)</td>
                        <td>@loan.LoanType</td>
                        <td>@loan.ApplicationDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (loan.Status == LoanApplication.LoanStatus.PaidOff)
                            {
                                <span class="text-success">Fully Paid</span>
                            }
                            else if (loan.Status == LoanApplication.LoanStatus.Pending)
                            {
                                <span style="color: orange;">Pending <i class="bi bi-clock-history"></i></span>
                            }
                            else
                            {
                                @loan.Status
                            }
                        </td>
                        <td>
                            @if (loan.ApplicationUserId == userManager.GetUserId(User) && loan.Status == LoanApplication.LoanStatus.Pending)
                            {
                                <a asp-action="CancelLoan" asp-route-id="@loan.Id" class="btn btn-danger">
                                    Cancel <i class="bi bi-backspace-reverse"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


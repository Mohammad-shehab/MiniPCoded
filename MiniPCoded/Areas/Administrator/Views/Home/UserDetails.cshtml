@model UserDetailsViewModel

@{
    ViewData["Title"] = "User Details";
}

<h2>Client Details</h2>

<div>
    <h4>@Model.User.FirstName @Model.User.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.User.Email</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.User.Gender</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.User.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-2">Civil ID</dt>
        <dd class="col-sm-10">@Model.User.CivilID</dd>

        <dt class="col-sm-2">Balance</dt>
        <dd class="col-sm-10">@Model.User.Balance KWD</dd>

        <dt class="col-sm-2">Account Number</dt>
        <dd class="col-sm-10">@Model.User.AccountNumber</dd>
    </dl>
</div>

<h3>Loan Applications</h3>
<table class="table table-responsive loan-table">
    <thead>
        <tr>
            <th>Loan Amount</th>
            <th>Duration (Months)</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.Loans)
        {
            <tr>
                <td>@loan.LoanAmount</td>
                <td>@((int)loan.DurationInMonths)</td>
                <td>
                    @if (loan.Status == LoanApplication.LoanStatus.PaidOff)
                    {
                        <span class="text-success">Paid</span>
                    }
                    else if (loan.Status == LoanApplication.LoanStatus.Approved)
                    {
                        <span class="text-success">Approved</span>
                    }
                    else if (loan.Status == LoanApplication.LoanStatus.Rejected)
                    {
                        <span class="text-danger">Rejected</span>
                    }
                    else if (loan.Status == LoanApplication.LoanStatus.Pending)
                    {
                        <span class="text-warning">Pending</span>
                    }
                    else
                    {
                        @loan.Status
                    }
                </td>
                <td>
                    @if (loan.Status == LoanApplication.LoanStatus.Pending)
                    {
                        <form asp-action="Approve2" asp-route-id="@loan.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form asp-action="Reject2" asp-route-id="@loan.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </form>
                    }
                    else if (loan.Status == LoanApplication.LoanStatus.Approved || loan.Status == LoanApplication.LoanStatus.PaidOff)
                    {
                        <a asp-action="LoanDetails" asp-route-id="@loan.Id" class="btn btn-primary">View Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>





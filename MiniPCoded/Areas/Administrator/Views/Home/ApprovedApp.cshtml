@model IEnumerable<CPCoded.Models.LoanApplication>

@{
    ViewData["Title"] = "Approved Applications";
}

<h1>Approved Applications</h1>

<table class="table table-responsive loan-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.LoanAmount)</th>
            <th>Duration (Months)</th>
            <th>@Html.DisplayNameFor(model => model.ApplicationDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.ApplicationUserId)</th>
            <th>@Html.DisplayNameFor(model => model.LoanType)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.LoanAmount)</td>
                <td>@((int)item.DurationInMonths)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationDate)</td>
                <td>
                    @if (item.Status == CPCoded.Models.LoanApplication.LoanStatus.Approved)
                    {
                        <span class="text-success">Approved</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Status)
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationUserId)</td>
                <td>@Html.DisplayFor(modelItem => item.LoanType)</td>
                <td>
                    @if (item.Status == CPCoded.Models.LoanApplication.LoanStatus.Pending)
                    {
                        <form asp-action="Approve" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-outline-success">Accept</button>
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-outline-danger">Reject</button>
                        </form>
                    }
                    <a asp-action="AccountDetails" asp-controller="Home" asp-route-id="@item.ApplicationUserId" class="btn btn-outline-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>





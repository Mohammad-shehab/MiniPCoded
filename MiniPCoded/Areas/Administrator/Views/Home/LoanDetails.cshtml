@model LoanApplication

@{
    ViewData["Title"] = "Loan Details";
}

<h2>Loan Details</h2>

<div>
    <h4>Loan Amount: @Model.LoanAmount</h4>
    <h4>Duration: @Model.DurationInMonths months</h4>
    <h4>Status: @Model.Status</h4>
</div>

<h3>Payment History</h3>
<table class="table">
    <thead>
        <tr>
            <th>Amount Paid</th>
            <th>Payment Date</th>
            <th>Transaction Reference</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model.LoanRepayments)
        {
            <tr>
                <td>@payment.AmountPaid</td>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.TransactionReference</td>
            </tr>
        }
    </tbody>
</table>
